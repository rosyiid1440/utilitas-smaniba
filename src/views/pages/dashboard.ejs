<h1 class="text-3xl font-semibold text-gray-700">Dashboard Sekolah</h1>
<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 mt-6">
    <div class="p-6 bg-white rounded-lg shadow-md">
        <div class="flex items-start">
            <div class="p-3 bg-blue-100 text-blue-500 rounded-full">
                <i class="bi bi-people-fill text-2xl"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">Total Akun</p>
                <p class="text-3xl font-bold text-gray-800">
                    <%= stats.totalUsers %>
                </p>
            </div>
        </div>
    </div>
    <div class="p-6 bg-white rounded-lg shadow-md">
        <div class="flex items-start">
            <div class="p-3 bg-green-100 text-green-500 rounded-full">
                <i class="bi bi-person-check-fill text-2xl"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">Siswa Online</p>
                <p class="text-3xl font-bold text-gray-800">
                    <%= stats.onlineStudents %>
                </p>
            </div>
        </div>
    </div>
    <div class="p-6 bg-white rounded-lg shadow-md">
        <div class="flex items-start">
            <div class="p-3 bg-yellow-100 text-yellow-500 rounded-full">
                <i class="bi bi-person-video3 text-2xl"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">Guru Online</p>
                <p class="text-3xl font-bold text-gray-800">
                    <%= stats.onlineTeachers %>
                </p>
            </div>
        </div>
    </div>
    <div class="p-6 bg-white rounded-lg shadow-md">
        <div class="flex items-start">
            <div class="p-3 bg-indigo-100 text-indigo-500 rounded-full">
                <i class="bi bi-graph-up-arrow text-2xl"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-500">Top Pengguna Hari Ini</p>
                <p class="text-lg font-bold text-gray-800 truncate">
                    <%= stats.topUserData.username %>
                </p>
                <p class="text-sm text-gray-600">(<%= (stats.topUserData.totalusage / 1024 / 1024).toFixed(2) %> MB)</p>
            </div>
        </div>
    </div>
</div>