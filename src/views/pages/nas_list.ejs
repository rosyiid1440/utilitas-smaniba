<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
    <h1 class="text-3xl font-semibold text-gray-800">Manajemen Router (NAS)</h1>
    <a href="/nas/add"
        class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-lg shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
        <i class="bi bi-plus-lg mr-1"></i> Tambah Router
    </a>
</div>

<div class="mt-6 bg-white rounded-lg shadow overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full whitespace-nowrap">
            <thead class="bg-gray-50">
                <tr class="text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                    <th class="p-4">Alamat IP (nasname)</th>
                    <th class="p-4">Nama Pendek</th>
                    <th class="p-4">Deskripsi</th>
                    <th class="p-4 text-right">Aksi</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                <% if (nasList && nasList.length> 0) { %>
                    <% nasList.forEach(nas=> { %>
                        <tr class="text-gray-700 hover:bg-gray-50">
                            <td class="p-4 text-sm font-medium text-gray-900">
                                <%= nas.nasname %>
                            </td>
                            <td class="p-4 text-sm">
                                <%= nas.shortname %>
                            </td>
                            <td class="p-4 text-sm text-gray-600">
                                <%= nas.description %>
                            </td>
                            <td class="p-4 text-sm text-right">
                                <div class="flex justify-end space-x-2">
                                    <a href="/nas/edit/<%= nas.id %>"
                                        class="px-3 py-1 text-xs font-medium text-white bg-gray-600 rounded-md hover:bg-gray-700">Edit</a>
                                    <form action="/nas/delete/<%= nas.id %>" method="POST"
                                        onsubmit="return confirm('Apakah Anda yakin ingin menghapus router ini?')">
                                        <button type="submit"
                                            class="px-3 py-1 text-xs font-medium text-white bg-red-600 rounded-md hover:bg-red-700">Hapus</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" class="p-6 text-center text-gray-500">
                                        Belum ada router (NAS) yang ditambahkan.
                                    </td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>
</div>