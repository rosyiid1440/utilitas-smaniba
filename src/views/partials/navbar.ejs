<div id="sidebar"
    class="fixed inset-y-0 left-0 z-30 w-64 bg-gray-800 text-white transform -translate-x-full transition-transform duration-300 ease-in-out lg:translate-x-0 lg:static lg:inset-0 flex-shrink-0">

    <div class="flex items-center justify-center h-20 border-b border-gray-700">
        <i class="bi bi-broadcast text-2xl text-blue-400"></i>
        <span class="ml-3 text-xl font-bold">Utilitas</span>
    </div>

    <nav class="mt-4 px-2">
        <% if (session.user && session.user.role==='admin' ) { %>
            <a href="/dashboard-admin"
                class="flex items-center px-4 py-2 mt-2 text-gray-300 hover:bg-gray-700 hover:text-white rounded-md">
                <i class="bi bi-grid-1x2-fill mr-3"></i> Dashboard
            </a>
            <a href="/active-users"
                class="flex items-center px-4 py-2 mt-2 text-gray-300 hover:bg-gray-700 hover:text-white rounded-md">
                <i class="bi bi-person-check-fill mr-3"></i> Pengguna Aktif
            </a>
            <a href="/sync"
                class="flex items-center px-4 py-2 mt-2 text-gray-300 hover:bg-gray-700 hover:text-white rounded-md">
                <i class="bi bi-arrow-repeat mr-3"></i> Sinkronisasi
            </a>
            <p class="px-4 mt-4 mb-2 text-xs uppercase text-gray-500">Manajemen</p>
            <a href="/users"
                class="flex items-center px-4 py-2 mt-2 text-gray-300 hover:bg-gray-700 hover:text-white rounded-md">
                <i class="bi bi-people-fill mr-3"></i> Pengguna
            </a>
            <a href="/profiles"
                class="flex items-center px-4 py-2 mt-2 text-gray-300 hover:bg-gray-700 hover:text-white rounded-md">
                <i class="bi bi-sliders mr-3"></i> Profil
            </a>
            <a href="/nas"
                class="flex items-center px-4 py-2 mt-2 text-gray-300 hover:bg-gray-700 hover:text-white rounded-md">
                <i class="bi bi-router-fill mr-3"></i> Router
            </a>
            <% } %>
    </nav>

    <div class="absolute bottom-0 w-64 p-4 border-t border-gray-700">
        <% if (session.user) { %>
            <div class="text-sm text-gray-400">Login sebagai:</div>
            <div class="font-semibold text-white truncate">
                <%= session.user.username %>
            </div>
            <a href="/logout"
                class="flex items-center justify-center w-full px-4 py-2 mt-4 text-sm font-semibold bg-red-600 hover:bg-red-700 rounded-md">
                <i class="bi bi-box-arrow-right mr-2"></i> Logout
            </a>
            <% } %>
    </div>
</div>